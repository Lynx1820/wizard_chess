int stby = 13;
int inA1 = 4;
int inA2 = 5;
int inB1 = 12;
int inB2 = 14;

int turn_delay=200;
int square_delay=250;

void setup() {
  pinMode(inA1,OUTPUT);
  pinMode(inA2,OUTPUT);
  pinMode(inB1,OUTPUT);
  pinMode(inB2,OUTPUT);
  pinMode(stby,OUTPUT);
}

void loop() {
  turn_right();
  delay(3000);
  turn_left();
  delay(3000);
}


void turn_right(){
  digitalWrite(stby, HIGH);
  digitalWrite(inA1, HIGH);
  digitalWrite(inA2, LOW);
  digitalWrite(inB1, LOW);
  digitalWrite(inB2, HIGH);
  delay(turn_delay);
  digitalWrite(stby, LOW);
}


void turn_left(){
  digitalWrite(stby, HIGH);
  digitalWrite(inA2, HIGH);
  digitalWrite(inA1, LOW);
  digitalWrite(inB2, LOW);
  digitalWrite(inB1, HIGH);
  delay(turn_delay);
  digitalWrite(stby, LOW);
}


void forward(){
  //forward
  digitalWrite(stby, HIGH);
  digitalWrite(inA1, HIGH);
  digitalWrite(inA2, LOW);
  digitalWrite(inB1, HIGH);
  digitalWrite(inB2, LOW);
  delay(square_delay);
  digitalWrite(stby, LOW);
}
